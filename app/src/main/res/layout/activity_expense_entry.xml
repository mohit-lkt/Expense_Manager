<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ExpenseEntry">

    <include
        layout="@layout/activity_navigation"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="60dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="9dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Receipt Number"
                android:id="@+id/tvReceiptNo_entry"
                android:layout_marginTop="0dp"
                android:textSize="17dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date"
                android:id="@+id/tvDate"
                android:layout_marginTop="27dp"
                android:textSize="17dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="From Head"
                android:id="@+id/tvfromHead"
                android:layout_marginTop="27dp"
                android:textSize="17dp"/>
            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:text="Main Expense"
                android:id="@+id/tvmainExpense"
                android:textSize="17dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="29dp"
                android:text="Sub Expense"
                android:inputType="number"
                android:id="@+id/tvsubExpense"
                android:textSize="17dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="27dp"
                android:text="Amount"
                android:id="@+id/tvamount"
                android:inputType="textEmailAddress"
                android:textSize="17dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="27dp"
                android:text="Remark"
                android:id="@+id/tvremark"
                android:inputType="textEmailAddress"
                android:textSize="17dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="5dp">

            <EditText
                android:layout_width="170dp"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/edittext_frame"
                android:id="@+id/etReceiptNo_entry"
                android:editable="false"
                android:text="00007"/>
            <EditText
                android:id="@+id/etDate"
                android:layout_width="170dp"
                android:focusable="false"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/edittext_frame"
                android:clickable="true"
                android:editable="true"
                />
            <AutoCompleteTextView
                android:id="@+id/actfromHead"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/edittext_frame">
            </AutoCompleteTextView>
            />
            <AutoCompleteTextView
                android:id="@+id/actmainExpense"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/edittext_frame">
            </AutoCompleteTextView>
            <AutoCompleteTextView
                android:id="@+id/actsubExpense"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/edittext_frame">
            </AutoCompleteTextView>
            <EditText
                android:layout_width="170dp"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:inputType="number"
                android:background="@drawable/edittext_frame"
                android:id="@+id/etamount_entry"/>
            <EditText
                android:layout_width="170dp"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/edittext_frame"
                android:id="@+id/etremark_entry"/>
        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">
        <Button
            android:layout_width="150dp"
            android:layout_height="40dp"

            android:layout_marginLeft="7dp"
            android:text="Save"
            android:background="@drawable/buttonframe_others"
            android:textColor="@color/white"
            android:id="@+id/btnsave_entry"
            />

        <Button
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginLeft="45dp"


            android:text="View List"
            android:background="@drawable/buttonframe_others"
            android:textColor="@color/white"
            android:id="@+id/btnviewList_entry"
            />
    </LinearLayout>

    </LinearLayout>
</android.support.v4.widget.DrawerLayout>